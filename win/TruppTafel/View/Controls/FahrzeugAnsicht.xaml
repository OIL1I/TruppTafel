<UserControl x:Class="TruppTafel.View.Controls.FahrzeugAnsicht"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TruppTafel.View.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             MaxWidth="500">
    <Border BorderThickness="2" CornerRadius="7" BorderBrush="Black">
    <StackPanel>
    <TextBlock x:Name="TextBlockFahrzeugName" Text="{Binding FahrzeugName, NotifyOnSourceUpdated=True}" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" SourceUpdated="TextBlockFahrzeugName_OnSourceUpdated"></TextBlock>    
    <Grid x:Name="MainGrid" ShowGridLines="True" AllowDrop="True" Background="LightGray">
        
    </Grid>
    </StackPanel>
    </Border>
</UserControl>
